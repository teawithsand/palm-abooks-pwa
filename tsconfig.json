{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"target": "ES2020",
		"sourceMap": true,
		"jsx": "react",
		"allowJs": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["*"]
		},
		"types": [
			"DOM",
		],
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
